generator client {
  provider = "prisma-client-js"
}

model User {
  id         String      @id
  name       String
  email      String      @unique
  password   String
  created_at DateTime
  members    Member[]
  Community  Community[]
}

model Community {
  id         String   @id
  name       String
  slug       String   @unique
  owner      User     @relation(fields: [ownerId], references: [id])
  ownerId    String
  created_at DateTime
  updated_at DateTime
  members    Member[]
}

model Role {
  id         String   @id
  name       String   @unique
  created_at DateTime
  updated_at DateTime
  members    Member[]
}

model Member {
  id          String    @id
  community   Community @relation(fields: [communityId], references: [id])
  communityId String
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  role        Role      @relation(fields: [roleId], references: [id])
  roleId      String
  created_at  DateTime
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
